ll power(ll a,ll b)
{
	if(b==0)
		return 1;
	else if(b==1)
		return a;
	ll temp=power(a,b/2);
	if(b%2)
		return (((a*temp)%MOD)*temp)%MOD;
	else
		return (temp*temp)%MOD;
}


]]></content>
